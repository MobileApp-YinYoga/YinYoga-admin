<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <size android:height="1dp"/> <!-- Bottom underline height -->
            <stroke android:color="@color/main" android:width="1dp"/> <!-- Underline color and width -->
        </shape>
    </item>
</layer-list>
