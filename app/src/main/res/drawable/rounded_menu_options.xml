<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bo góc -->
    <corners android:radius="30dp" /> <!-- Rounded corners -->

    <solid android:color="@android:color/white"/>
    <!-- Đường viền với màu sắc và độ rộng -->
    <stroke
        android:width="1dp"
        android:color="@color/main" /> <!-- Màu của đường viền (border) -->

    <!-- Padding bên trong đường viền -->
    <padding
        android:left="5dp"
        android:top="0dp"
        android:right="5dp"
        android:bottom="0dp" />
</shape>
