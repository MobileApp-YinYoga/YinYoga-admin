<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="30dp" /> <!-- Match the corner radius for consistency -->
        </shape>
    </item>
    <!-- Main Background -->
    <item android:top="1px" android:left="1px" android:right="1px" android:bottom="1px">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="30dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/main" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
