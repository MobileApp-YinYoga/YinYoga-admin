<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn giữ hoặc hover vào -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main" /> <!-- Màu nền khi hover -->
            <corners android:radius="8dp" /> <!-- Góc bo tròn, có thể tùy chỉnh -->
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Nền trong suốt mặc định -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
